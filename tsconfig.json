{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "tsBuildInfoFile": "./buildFile.json",
    "diagnostics": true,
    "target": "es6",
    "lib": ["ES2015"],
    "experimentalDecorators": true,
    "module": "commonjs",
    "rootDir": "./",
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "exclude": [
    "./test",
    "./dist",
    "node_modules"
  ]
}
